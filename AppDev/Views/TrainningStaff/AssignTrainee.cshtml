@model AppDev.ViewModel.AssignTrainee
@{
    ViewBag.Title = "AssignTraineeToCourse";
}

<h2>Assign Trainee To Course</h2>
<div class="btn-group">
    <!-- Tạo button back lui trang index-->
    @Html.ActionLink("Back to Index of Course", "IndexForCourse", null,
                        new { @class = "btn btn-primary active" })
</div>
<!-- Tạo button assign trainee to course-->
@using (Html.BeginForm("AssignTraineeToCourse", "TrainningStaff", FormMethod.Post))
{
    <div class="form-group">
        <label>Course Name</label>
        @Html.DropDownListFor(m => m.CourseId,
                                new SelectList(Model.courses, "Id", "CourseName"),
                                new { @class = "form-control" }
                                )
    </div>
    <div class="form-group">
        <label>Trainee</label>
        <!--Seleclist như bên dưới sẽ lấy Id và hiển thị name-->
        @Html.DropDownListFor(m => m.TraineeId,
                                new SelectList(Model.trainees, "Id", "Email"),
                                new { @class = "form-control" }
                                )
        @Html.ValidationMessage("duplicate", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Assign course for Trainee</button>
}
