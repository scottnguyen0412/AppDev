@model AppDev.ViewModel.AssignTrainer
@{
    ViewBag.Title = "AssignTrainerToCourse";
}

<h2>Assign Trainer To Course</h2>
<div class="btn-group">
    @Html.ActionLink("Back to Index of Course", "IndexForCourse", null,
                        new { @class = "btn btn-primary active" })
</div>
@using (Html.BeginForm("AssignTrainerToCourse", "TrainningStaff", FormMethod.Post))
{
    <div class="form-group">
        <label>Course Name</label>
        @Html.DropDownListFor(m => m.CourseId,
                                new SelectList(Model.courses, "Id", "CourseName"),
                                new { @class = "form-control" }
                                )
    </div>
    <div class="form-group">
        <label>Trainer</label>
        <!--Seleclist như bên dưới sẽ lấy Id và hiển thị name-->
        @Html.DropDownListFor(m => m.TrainerId,
                                new SelectList(Model.trainners, "Id", "Email"),
                                new { @class = "form-control" }
                                )
        @Html.ValidationMessage("duplicate", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Assign course for Trainer</button>
}


