@model IEnumerable<AppDev.Models.TrainningStaff>
@{
    ViewBag.Title = "IndexForStaff";
}

<h2>The Main Page For Staff Controlled by Admin</h2>
<div class="form-group">
    @Html.ActionLink("Create a Staff", "CreateTrainingStaff", "Admin",
        new { @class = "btn btn-primary" })

</div>
<table class="table">
    <thead>
        <!--List the whole inform in Model using foreach -->
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var items in Model)
        {
            <tr>
                <td>@items.FullName</td>
                <td>@items.Email</td>
                <td>@items.Age</td>
                <td>@items.Address</td>
                <td>
                    <!--Get StaffId-->
                    @Html.ActionLink("See Details","StaffDetails","Admin",
                        new { id = items.StaffId}, new { @class = "btn btn-primary"})
                    @Html.ActionLink("Change Password", "ChangePasswordForStaff", "Admin",
                        new { id = items.StaffId }, new { @class = "btn btn-primary" })

                    <!--Get id to Edit-->
                    @Html.ActionLink("Edit", "EditStaff", "Admin",
                        new { id = items.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "DeleteStaff", "Admin",
                        new { id = items.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure to delete?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
